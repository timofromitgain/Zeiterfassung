<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Registration">

    <EditText
        android:id="@+id/loginUsername"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Username"></EditText>

    <EditText
        android:id="@+id/loginPasswort"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Passwort"></EditText>

    <Button
        android:id="@+id/btnLogin"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:text="Sign In">

    </Button>
    <View style="@style/dividerHorizontalDick"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noch kein Account ? \n\nRegistrieren Sie sich hier"></TextView>


    <EditText
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:id="@+id/regNachname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:hint="Nachname (*)">
    </EditText>

    <EditText
        android:id="@+id/regVorname"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:hint="Vorname (*)">
    </EditText>
    <EditText
        android:id="@+id/regStrasse"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:hint="StraÃŸe">
    </EditText>
    <EditText
        android:id="@+id/regStadt"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:hint="Stadt">
    </EditText>


    <EditText
        android:id="@+id/regEmail"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:hint="E-Mail (*)">
    </EditText>

    <EditText
        android:id="@+id/regPassword"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:hint="Passwort (*)">
    </EditText>

    <RadioGroup
        android:id="@+id/rgStatus"

        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"     >

        <RadioButton
            android:id="@+id/rbMonteur"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Monteur"
            />

        <RadioButton
            android:id="@+id/rbProjektleiter"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Projektleiter" />
    </RadioGroup>
    <EditText
        android:visibility="gone"
        android:id="@+id/regVerifycode"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:hint="Code">
    </EditText>
    <Button
        android:id="@+id/btnReg"
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_border"
        android:text="Registrieren"></Button>



</LinearLayout>