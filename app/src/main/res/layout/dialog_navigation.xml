<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_data"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">



            <RadioGroup
                android:id="@+id/rgNavigation_DialogNavigation"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"     >

                <RadioButton
                    android:id="@+id/rbNaechsterKunde_DialogNavigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_normal"
                    android:text="@string/navigationNaechsteKunde"
                    />

                <RadioButton
                    android:id="@+id/rbMehrereKunden_DialogNavigation"
                    android:layout_marginTop="@dimen/abstand_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_normal"
                    android:text="@string/navigationMehrereKunden" />
            </RadioGroup>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"

    android:orientation="horizontal">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/abstand_normal"
        android:textSize="@dimen/text_normal"
        android:visibility="gone"
        android:id="@+id/lv_DialogNavigation"
       >

        <TextView
            android:layout_marginLeft="@dimen/abstand_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:text="Anzahl Kunden " />

        <NumberPicker
            android:id="@+id/numberpicker_DialogNavigation"
            android:layout_marginLeft="@dimen/abstand_normal"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_normal"
            android:layout_height="wrap_content"></NumberPicker>



        <Button
            android:visibility="gone"
            android:id="@+id/btnAnzahlVerringern_DialogNavigation"
            android:background="@drawable/button_border"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:textSize="@dimen/text_normal"
            android:text="-" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvAnzah_DialogNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:text="2"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btnAnzahlErhoehen_DialogNavigation"
            android:background="@drawable/button_border"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/text_normal"
            android:text="+" />

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>


