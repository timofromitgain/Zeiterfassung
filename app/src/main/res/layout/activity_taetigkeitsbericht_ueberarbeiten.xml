<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:scrollbars="none">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/abstand_normal"
        android:layout_marginTop="@dimen/abstand_normal"
        android:layout_marginRight="@dimen/abstand_normal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAllgemein_NeuerKundeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/abstand_normal"
            android:text="Bearbeiten"
            android:textSize="@dimen/text_gross"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/TeditFirma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Firma"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/abstand_normal"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/TeditAnsprechpartner"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Ansprechpartner"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/abstand_normal"
            android:textSize="@dimen/text_normal" />


        <EditText
            android:id="@+id/TeditTaetigkeit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Tätigkeit"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/abstand_normal"
            android:textSize="@dimen/text_normal" />


        <EditText
            android:id="@+id/TeditStraße"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Straße"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/abstand_normal"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/TeditStadt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/kundeVname"
            android:hint="Stadt"
            android:paddingLeft="@dimen/abstand_normal"
            android:textSize="@dimen/text_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tvUhrzeitBeginn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="@dimen/abstand_normal"
            android:textSize="@dimen/text_normal" />

        <ImageButton
            android:id="@+id/imtBtnAnfangEdit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/weiss"
            android:textSize="@dimen/text_normal"
            app:srcCompat="@drawable/ic_uhr"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tvUhrzeitEnde"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="@dimen/abstand_normal"
            android:textSize="@dimen/text_normal" />

        <ImageButton
            android:id="@+id/imtBtnEndeEdit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/weiss"
            android:textSize="@dimen/text_normal"
            app:srcCompat="@drawable/ic_uhr"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnUebernehmen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/abstand_gross"
            android:background="@drawable/button_border"

            android:padding="@dimen/abstand_gross"
            android:text="Übernehmen"
            android:textSize="@dimen/text_normal" />


    </LinearLayout>
</ScrollView>